<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.biodata.OrderBiodataActivity">

    <LinearLayout
        android:id="@+id/ll_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F0A3B"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title_toolbar"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@string/txt_title_order_biodata"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_action_bar_2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_shape_2"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_action_bar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/txt_title_order_biodata_2"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input_action"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_shape"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_action_bar_2">

        <!-- TextView Nama Lengkap -->
        <TextView
            android:id="@+id/tvFullNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/txt_full_name"
            android:textStyle="bold"
            android:textColor="#2F0A3B"
            android:textSize="16sp" />

        <!-- EditText Nama Lengkap -->
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/txt_input_full_name"
            android:padding="8dp"
            android:background="@drawable/bg_shape_3"
            android:textSize="12sp" />

        <!-- LinearLayout untuk TextView dan Switch Punya Keluarga -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- TextView Punya Keluarga -->
            <TextView
                android:id="@+id/tvFamilyLabel"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_family_name"
                android:textSize="12sp" />

            <!-- Switch Punya Keluarga -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchFamily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:scaleX="0.7"
                android:scaleY="0.7" />

        </FrameLayout>

        <!-- TextView Nama Keluarga -->
        <TextView
            android:id="@+id/tvFamilyNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/txt_family_name_2"
            android:textStyle="bold"
            android:textColor="#2F0A3B"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <!-- EditText Nama Keluarga -->
        <EditText
            android:id="@+id/etFamilyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/txt_input_name_family"
            android:padding="8dp"
            android:background="@drawable/bg_shape_3"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- TextView Nomor Telepon -->
        <TextView
            android:id="@+id/tvPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/txt_phone_number"
            android:textStyle="bold"
            android:textColor="#2F0A3B"
            android:textSize="16sp" />

        <!-- EditText Nomor Telepon -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/txt_input_phone_number"
            android:inputType="phone"
            android:padding="8dp"
            android:background="@drawable/bg_shape_3"
            android:textSize="12sp" />

        <!-- TextView Email -->
        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/txt_email"
            android:textStyle="bold"
            android:textColor="#2F0A3B"
            android:textSize="16sp" />

        <!-- EditText Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/txt_input_email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:background="@drawable/bg_shape_3"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="160dp"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>